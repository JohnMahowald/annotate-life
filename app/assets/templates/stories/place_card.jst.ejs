<div
  class="story-place-card story-card-thumbnail"
  data-id='<%= story.id %>'
  style="background-image: url(<%= story.escape('img_url') %>)">
  
  <div class='place-card-header'>
    <div class="dropdown story-card-menu">
      <span 
        class="story-card-menu dropdown-toggle glyphicon glyphicon-chevron-down"
        data-toggle="dropdown"></span>
      <ul
        class="dropdown-menu dropdown-menu-right" 
        aria-labelledby="dropdownMenu1">
        <li><a href="#" class='show-story'>show</a></li>
        <li><a href="#" class='edit-story'>edit</a></li>        
        <li class="divider"></li>
        <li><a href="#" class="delete-story">delete</a></li>

      </ul>
    </div>
    <h3><%= story.escape('title') %></h3>
  <div>
</div>