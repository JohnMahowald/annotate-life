<!-- Modal -->
<div 
  class="modal fade" 
  id="new-journal-modal-form"
  tabindex="-1" 
  role="dialog" 
  aria-labelledby="newJournalForm" 
  aria-hidden="true">
  
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button 
          type="button" 
          class="close"
          data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span></button>
        <h4 class="modal-title">Create New Journal</h4>
      </div>
      
      <form id='new-journal-modal-form'>
        <div class="modal-body">
          <div class='form-group'>
            <label for='journal-title'>Title</label>
            <input type='text' name='journal[title]' id="journal-title">
          </div>

          <div class='form-group'>
            <label for='journal-description'>Description</label>
            <textarea 
              name='journal[description]' 
              id='journal-description'></textarea>
          </div>
        </div>
      
      <div class="modal-footer">
        
        <button 
          type="button" 
          class="btn btn-default" 
          data-dismiss="modal">Cancel</button>
        <button 
          type="button" 
          class="btn btn-primary"
          id='new-journal-modal-submit'>Create Journal</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->